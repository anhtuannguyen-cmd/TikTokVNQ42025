    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.nav-link');
            const contentSections = document.querySelectorAll('.content-section');

            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    const target = link.dataset.target;

                    navLinks.forEach(navLink => navLink.classList.remove('active'));
                    link.classList.add('active');

                    contentSections.forEach(section => {
                        if (section.id === target) {
                            section.classList.add('active');
                        } else {
                            section.classList.remove('active');
                        }
                    });
                });
            });

            // Cập nhật màu sắc biểu đồ sang Cyan và Fuchsia
            const netNewData = {
                labels: ['> $3,500', '> $10,000', '> $15,000'],
                datasets: [
                    {
                        label: 'Tín dụng cơ sở (%)',
                        data: [30, 35, 40],
                        backgroundColor: 'rgba(34, 211, 238, 0.5)', /* Cyan-400 */
                        borderColor: 'rgba(34, 211, 238, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Bonus Live Ads (%)',
                        data: [20, 20, 20],
                        backgroundColor: 'rgba(236, 72, 153, 0.5)', /* Fuchsia-500 */
                        borderColor: 'rgba(236, 72, 153, 1)',
                        borderWidth: 1
                    }
                ]
            };

            const netNewConfig = {
                type: 'bar',
                data: netNewData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Các bậc ưu đãi cho Khách hàng mới (Net New)',
                            color: '#e5e7eb' // Text white
                        },
                        legend: {
                            labels: {
                                color: '#a1a1aa' // Gray-400
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += context.parsed.y + '%';
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            stacked: true,
                            ticks: {
                                color: '#a1a1aa' // Gray-400
                            }
                        },
                        y: {
                            stacked: true,
                            ticks: {
                                callback: function(value) {
                                    return value + '%'
                                },
                                color: '#a1a1aa' // Gray-400
                            },
                            grid: {
                                color: '#374151' // Gray-700
                            },
                            title: {
                                display: true,
                                text: 'Tỷ lệ tín dụng (%)',
                                color: '#a1a1aa'
                            }
                        }
                    }
                }
            };
            
            const netNewChartCanvas = document.getElementById('netNewChart');
            if (netNewChartCanvas) {
                new Chart(netNewChartCanvas, netNewConfig);
            }

            const calculateBtn = document.getElementById('calculateCreditBtn');
            const totalSpendInput = document.getElementById('totalSpend');
            const liveSpendInput = document.getElementById('liveSpend');
            const resultDiv = document.getElementById('creditResult');

            calculateBtn.addEventListener('click', () => {
                const totalSpend = parseFloat(totalSpendInput.value) || 0;
                const liveSpend = parseFloat(liveSpendInput.value) || 0;

                if (totalSpend <= 0) {
                    resultDiv.textContent = 'Vui lòng nhập tổng chi tiêu.';
                    resultDiv.className = 'mt-4 text-lg font-bold text-fuchsia-400';
                    return;
                }

                let basePercent = 0;
                if (totalSpend >= 15000) {
                    basePercent = 0.40;
                } else if (totalSpend >= 10000) {
                    basePercent = 0.35;
                } else if (totalSpend >= 3500) {
                    basePercent = 0.30;
                }

                let bonusPercent = 0;
                if (totalSpend > 0 && (liveSpend / totalSpend) > 0.10) {
                    bonusPercent = 0.20;
                }

                const totalPercent = basePercent + bonusPercent;
                let creditAmount = totalSpend * totalPercent;
                
                const incentiveCap = 50000;
                creditAmount = Math.min(creditAmount, incentiveCap);

                resultDiv.innerHTML = `
                    Tín dụng cơ sở: ${basePercent * 100}%<br>
                    Bonus Live Ads: ${bonusPercent * 100}%<br>
                    Tổng tín dụng ước tính: <span class="text-2xl">${creditAmount.toLocaleString('en-US', { style: 'currency', currency: 'USD' })}</span>
                    (Tối đa $50,000)
                `;
                resultDiv.className = 'mt-4 space-y-1 font-bold text-fuchsia-400';
            });
        });
    </script>
</body>
</html>
